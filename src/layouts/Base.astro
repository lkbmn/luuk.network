---
import type { SiteLocale } from "@generated/datocms-types";
import { Footer, Header, IconsSprite, Menu } from "@components";

import "@styles/a11y.css";
import "@styles/reset.css";
import "@styles/theme.css";
import "@styles/tokens.css";
import "@styles/typography.css";
import { Seo, type SeoOrFaviconTag } from "@datocms/astro";

type Props = {
  locale: SiteLocale;
  seo: SeoOrFaviconTag[];
};

const { locale, seo } = Astro.props;
---

<html lang={locale}>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />

    <Seo data={seo} />

    <link rel="preload" href="/fonts/Nunito/Nunito-Regular.woff2" as="font" type="font/woff2" crossorigin />
    <link rel="preload" href="/fonts/Nunito/Nunito-Bold.woff2" as="font" type="font/woff2" crossorigin />
    <link rel="preload" href="/fonts/Dash/DashCasualL-Regular.woff2" as="font" type="font/woff2" crossorigin />
  </head>
  <body>
      <div class="content-wrapper">
        <Header class="header" />
        <Menu />

        <main>
            <slot />
        </main>

        <Footer class="footer" />
      </div>

    <IconsSprite />
  </body>
</html>

<style>
    body {
        min-height: 100dvh;
        display: grid;
        grid-template-columns:
          [full-start] 1fr [main-start] minmax(0px, 600px)
          [main-end] 1fr [full-end];
    }

    @media screen and (min-width: 500px) {
        body {
            padding: var(--spacing-sm);
        }
    }

    .content-wrapper {
        grid-column: main;
        border: 1px solid oklch(0.269 0.042 263);
        display: grid;
        grid-template-rows: auto 1fr auto;
        position: relative;
    }
</style>
