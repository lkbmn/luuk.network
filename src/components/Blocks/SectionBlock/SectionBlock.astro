---
import type { SectionBlockFragment } from "@datocms/types";

type Props = {
  block: SectionBlockFragment;
};

const { block } = Astro.props;
---

<section class="section-block">
    <h2>{ block.title }</h2>

    <p>Section Block</p>
</section>

<style>
    .section-block {
        padding: 82px 31px;
        border: 1px solid oklch(0.46 0.056 253);
        margin: -1px;
    }
</style>
