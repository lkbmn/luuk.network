---
import type { SectionBlockFragment } from "@generated/datocms-types";

type Props = {
  block: SectionBlockFragment;
};

const { block } = Astro.props;
---

<section class="section-block">
    <h2>{ block.title }</h2>

    <p>Section Block</p>
</section>

<style>
    .section-block {
        padding: var(--spacing-xxl) var(--spacing-lg);
        border: 1px solid oklch(0.269 0.042 263);
        margin: -1px;
    }
</style>
